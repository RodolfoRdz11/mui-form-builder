{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./types.ts",

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,

		/* Build */
		"outDir": "dist",
		"typeRoots": ["types.d.ts", "node_modules/@types", "src/types.d.ts"]
	},
	"include": ["./", "src"],
	"exclude": ["node_modules", "dist", "build", "example"]
}
